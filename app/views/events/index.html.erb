<div class='page-header'>
<h1>Events</h1>
<%= link_to "New Event", new_event_path, class: 'btn btn-success' %>
</div>
<div class="row">
  <div class="col-md-8">
    <table class="data-table">
      <thead>
      <tr>
          <th class-'text-center'>Name</td>
          <th class='text-center'>Category</td>
          <th class='text-center'>Date</td>
      </tr>
    </thead>
    <tbody>
  <% @events.each do |event| %>
  <tr>
    <td><%= link_to event.title, event %></td>
    <td><%= event.category.humanize %></td>
    <td><%= event.date.strftime('%e %B, %Y') %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
  </div>
</div>
