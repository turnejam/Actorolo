<h1><%= @event.title %> <small>(<%=@event.category%>)</small></h1><small><%= @event.date %></small>
<div class='row'>
  <div class='col-md-8'>
    <p><%= @event.notes %> </p>
  </div>
  <div class='col-md-4'>
    <%= link_to "Edit Event", edit_event_path(@event), class: 'btn btn-success' %>
    <%= link_to "Delete Event", [@event], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you wish to delete this event?'} %>
  </div>
</div>
<div class='row>'>
  <div class='col-md-8'>
  <ul>Associated Contacts</ul>
  <% @event.contacts.each do |contact| %>
  <li><%= link_to "#{contact.name}: #{contact.role}", contact %></li>
  <% end %>
</div>
</div>
