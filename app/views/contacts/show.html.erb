<h1><%= @contact.name %></h1><small><%= @contact.role %></small>
<div class='row'>
  <div class='col-md-8'>
    <p><%= @contact.contact_info %> </p>
  </div>
  <div class='col-md-4'>
    <%= link_to "Edit Contact", edit_contact_path(@contact), class: 'btn btn-success' %>
    <%= link_to "Delete Contact", [@contact], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you wish to delete this contact?'} %>
  </div>
</div>
<div class='row>'>
  <div class='col-md-6 col-sm-12'>
    <table class='table table-bordered'>
      <thead>
      <tr>
        <td colspan="3">Associated Events</td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th class-'text-center'>Title</td>
        <th class='text-center'>Category</td>
        <th class='text-center'>Date</td>
      </tr>
  <% @contact.events.each do |event| %>
  <tr>
    <td><%= link_to event.title, event %></td>
    <td><%= event.category %></td>
    <td><%= event.date %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
<div class='col-md-6 col-sm-12'>
  <table class='table table-bordered'>
    <thead>
    <tr>
      <td colspan="3">Associated Events</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th class-'text-center'>Title</td>
      <th class='text-center'>Category</td>
      <th class='text-center'>Date</td>
    </tr>
  <% @contact.project.each do |project| %>
  <tr>
  <td><%= link_to project.title, project %></td>
  <td><%= project.category %></td>
  <td><%= project.date %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
</div>
</div>
