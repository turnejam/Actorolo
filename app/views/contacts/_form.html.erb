<%= bootstrap_form_for(@contact) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :contact_info %>
  <%= f.file_field :image, label: "Attach Headshot (not required)" %>
  <%= f.collection_radio_buttons :role, Contact.roles, :first, :first  %>
  <div class='form-group'>
    <label for='contact_event_ids'>Tag Events</label>
    <%= select_tag 'contact[event_ids]', options_from_collection_for_select(Event.all, "id", "title", :selected => Event.where(:id == contact.events)), multiple: true, class: 'form-control multi-select', id: 'contact_event_ids' %>
  </div>
  <%= f.submit "Save Contact", class: "btn btn-success" %>
<% end %>

